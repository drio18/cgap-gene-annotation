                        "properties": {
                            "parameters": {
                                "description": "The kwargs to pass to the parser",
                                "type": "object",
                                "additionalProperties": false,
                                "properties": {
                                    "header": {
                                        "description": "The header for the file, provided as a list of field names in appropriate order",
                                        "type": "array",
                                        "items": {
